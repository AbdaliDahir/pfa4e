{% extends 'security-base.html.twig' %}

{% block title %}New Account!{% endblock %}

{% block body %}

    <!-- Hero Section -->
    <div class="position-relative">
        <!-- half bachground -->
        <div class="col-md-6 position-absolute fx-top-0 fx-left-0 full-height" style="background-color: #f3f5f8;"></div>
        <div class="fx-h-100">
            <div class="container">
                <div class="row align-items-center justify-content-lg-between">
                    <!-- Left Content -->
                    <div class="col-md-5 full-height">
                        <!-- Content -->
                        <div class="position-relative fx-z-index-2 fx-h-100 d-flex align-items-center">
                            <div class="text-left text-security">
                                <h1 class="h1 fx-text-boldest text-primary"> Diploma </h1>
                                <div class="fx-divider fx-divider-horizontal fx-divider-2x"></div>
                                <p class="display-4 fx-text-bolder my-5"> Creativity & quality is our distination</p>
                                <div class="quote-content">
                                    <div class="quote2-module__content--author mb-4">
                                        <img class="fx-avatar rounded-circle fx-avatar-bordered shadow-lg d-inline-block fx-avatar-lg" src="/build/envato-green.png" alt="Image Description">
                                        <span class="pl-4 font-weight-bold">Soya Diallo,&nbsp;Chef Project</span>
                                    </div>
                                    <p class="h6 font-weight-normal fx-text-lh-md">
                                        "Since the beginning our main goal was to help entrepreneurs&nbsp;build new software solution that matters. Building and shipping products that are helpful for people, making world a better place, for everyone, including ourselves."
                                    </p>
                                </div>
                            </div>
                        </div>
                        <!-- ./End Content -->
                    </div>
                    <!-- ./End Left Content -->
                
                    <!-- Right Content -->
                    <div class="col-md-6 align-self-center space-2 space-md-3 space-lg-0 full-height d-flex align-items-center">
                      <div class="fx-w-100 registration-form px-3">
                        {% for flashError in app.flashes('verify_email_error') %}
                          <div class="alert alert-danger mb-4" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        <div class="security-form fx-w-100">
                          <div>
                            {# {{ form(registrationForm) }}  #}
                            {{ form_start(registrationForm) }}
                              <div id="fx-steps-1">
                                <h3>Personal Information</h3>
                                <section>
                                  <p class="mg-b-20">Try the keyboard navigation by clicking arrow left or right!</p>
                                  <div class="row row-sm">
                                    <div class="col-12">
                                      {{ form_widget(registrationForm.pseudo) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                      {{ form_widget(registrationForm.nom) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                      {{ form_widget(registrationForm.prenom) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                      {{ form_widget(registrationForm.nomArabe) }}
                                    </div>
                                    <div class="col-12 col-md-6">
                                      {{ form_widget(registrationForm.prenomArabe) }}
                                    </div>
                                    <div class="col-12">
                                      {{ form_widget(registrationForm.email) }}
                                    </div>
                                    <div class="col-12">
                                      {{ form_widget(registrationForm.plainPassword) }}
                                    </div>
                                  </div>
                                </section>
                                <h3>Billing Information</h3>
                                <section>
                                  <p class="mg-b-20">Wonderful transition effects.</p>
                                  <div class="row row-sm">
                                    <div class="col-12 mb-4">
                                        {{ form_widget(registrationForm.addresse, {'attr': {'class': 'mb-0'}}) }}
                                    </div>
                                    <div class="col-12 mb-4">
                                      {{ form_widget(registrationForm.telephone, {'attr': {'class': 'mb-0'}}) }}
                                    </div>
                                    <div class="col-12 mb-4">
                                      <label for="demande_diplome" class="fx-text-dark h5 col-form-label-lg"> 
                                        {{ form_label(registrationForm.datenaissance, 'date de Naissance :') }} 
                                      </label>
                                      {{ form_widget(registrationForm.datenaissance, {'attr': {'class': 'mb-0 flex-nowrap'}}) }}
                                    </div>
                                    <div class="col-12 mb-4">
                                      {{ form_widget(registrationForm.photoUrl) }}
                                    </div>
                                  </div>
                                </section>
                                <h3>Billing Information</h3>
                                <section>
                                  <p class="mg-b-20">Wonderful transition effects.</p>
                                  <div class="row row-sm">
                                    <div class="col-12">
                                        {{ form_widget(registrationForm.cinNumSejour) }}
                                    </div>
                                    <div class="col-12">
                                      {{ form_widget(registrationForm.lieuNaissance) }}
                                    </div>
                                    <div class="col-12">
                                      {{ form_widget(registrationForm.nationalite) }}
                                    </div>
                                  </div>
                                  <div class="text-right">
                                    {{ form_widget(registrationForm.inscrire) }}
                                  </div>
                                </section>
                              </div>
                            {{ form_end(registrationForm) }}
                          </div>
                        </div>
                    </div>
                    <!-- ./End Right Content -->
                </div>
            </div>
        </div>
    </div>
    <!-- ./End Hero Section --> 
{% endblock %}
