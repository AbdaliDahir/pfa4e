{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
{% set vars = {'profileapropos':'true'} %}
<div class="bg-light py-5">
  <div class="container">
    <div class="row">
      <!-- Include Profile Information -->
      <div class="col-lg-4">
        {{ include('laureat/layout/_profile_information.html.twig') }}
      </div><!-- ./End Col -->

      <div class="col-lg-8">
        <div class="fx-card fx-card-tabs"> 
          <!-- Include Profile Navigation-->
          <div class="fx-card-head">
            {% include('laureat/layout/_profile_navigation.html.twig') with vars %}
          </div> 
          <!-- card Body -->
          <div class="fx-card-body"> 
            <div >
              <h2>À propos</h2>

              <div class="form-group row my-3">
                <label for="staticEmail" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                  <input type="text" readonly class="form-control-plaintext" id="staticEmail" value={{ laureat.email }}>
                </div>
              </div>
              
              <div class="form-group row my-3">
                <label for="staticPhone" class="col-sm-4 col-form-label">Téléphone</label>
                <div class="col-sm-8">
                  <input type="text" readonly class="form-control-plaintext" id="staticPhone" value={{ laureat.telephone }}>
                </div>
              </div>

              <div class="form-group row my-3">
                <label for="staticCin" class="col-sm-4 col-form-label">CIN / Numéro séjour</label>
                <div class="col-sm-8">
                  <input type="text" readonly class="form-control-plaintext" id="staticCin" value={{ laureat.cinNumSejour }}>
                </div>
              </div>

              <div class="form-group row my-3">
                <label for="staticPlace" class="col-sm-4 col-form-label">Lieu de naissance </label>
                <div class="col-sm-8">
                  <input type="text" readonly class="form-control-plaintext" id="staticPlace" value={{ laureat.lieuNaissance }}>
                </div>
              </div>

              <div class="form-group row my-3">
                <label for="staticNomArab" class="col-sm-4 col-form-label">Nom Arabe </label>
                <div class="col-sm-8">
                  <input type="text" readonly class="form-control-plaintext" id="staticNomArab" value={{ laureat.nomArabe }}>
                </div>
              </div>

              <div class="form-group row my-3">
                <label for="staticPrenomArab" class="col-sm-4 col-form-label">Prénom Arabe </label>
                <div class="col-sm-8">
                  <input type="text" readonly class="form-control-plaintext" id="staticPrenomArab" value={{ laureat.prenomArabe }}>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div><!-- ./End Col -->
    </div>
  </div>
</div>
{% endblock %}
