<div class="bg-white shadow-sm mb-4">
  <div class="px-4 py-5">
    <div class="text-center">
      <div class="profile-Info"> 
        <img class="fx-avatar fx-avatar-squre fx-avatar-bordered shadow-lg d-inline-block fx-avatar-xl rounded-circle" 
        src="
        {% if directeur_pedagogique.photoUrl %} 
            {{ asset('uploads/imagesLaureat/'~ directeur_pedagogique.photoUrl) }}
        {% else %}
            /build/avatar.jpg
        {% endif %}
        "
        alt="Image Description" />
        <div class="ml-4 my-5">
          <h2 class="fx-text-dark mb-2 h4">
            <span class="align-middle">{{ directeur_pedagogique.prenom }} {{ directeur_pedagogique.nom }}</span> 
          </h2>
          <p class="fx-font-size-1 mb-1 fx-text-label-2">  
              <i class="align-middle" data-feather="map-icon"></i> 
              <span class="align-middle">{{ directeur_pedagogique.datenaissance|date("m/d/Y") }}</span> 
          </p>
          <p class="fx-font-size-1 mb-1 fx-text-label-2">
              <span class="align-middle">{{ directeur_pedagogique.email }}</span>
          </p>
        </div> 
      </div>
    </div>
    <div class="profile-actions text-center">
      <!-- Edit Profile -->
      <a class="btn btn-dark" href="{{ path('directeur_pedagogique_edit', {'id': directeur_pedagogique.id}) }}">
        <i data-feather='feather'></i>
        Edit Profile
      </a>
      {{ include('directeur_pedagogique/_delete_form.html.twig') }}
    </div>
  </div>
</div>
