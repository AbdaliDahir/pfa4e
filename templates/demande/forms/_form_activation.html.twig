
{{ form_start(form) }}
	<div class="my-custom-class-for-errors">
		{{ form_errors(form) }}
	</div>
	{% set key = form.diplome.vars.choices|first %}
	<div class="row">
		
		{% if is_granted('ROLE_SECRETAIRE') %}
			<div class="col col-md-6 mb-5">
				<label for="demande_etat" class="fx-text-dark h5 col-form-label-lg"> 
					{{ form_label(form.etatSecretaire, 'Demande Etat :') }}
				</label>
				{{ form_widget(form.etatSecretaire, {'attr': {'class': 'form-control form-control-lg'}}) }}
				{% if form.etatSecretaire.vars.value == 1 %}
					<span class="text-success"> Secretaire say that is valid </span>
				{% elseif form.etatSecretaire.vars.value == 0 %}
					<span class="text-danger"> Secretaire say that is not valid </span>
				{% elseif form.etatSecretaire.vars.value == 0 %}
					<span class="text-warning"> in process </span>
				{% endif %}
			</div>
		{% endif%}

		{% if is_granted('ROLE_DIRECTEUR') %}
		<div class="col col-md-6 mb-5">
			<label for="demande_etat" class="fx-text-dark h5 col-form-label-lg"> 
				{{ form_label(form.etatDirecteurPd, 'Demande Etat :') }} 
			</label>
			{{ form_widget(form.etatDirecteurPd, {'attr': {'class': 'form-control form-control-lg'}}) }}
			{% if form.etatDirecteurPd.vars.value == 1 %}
				<span class="text-success"> Directeur say that is valid </span>
			{% elseif form.etatDirecteurPd.vars.value == 0 %}
				<span class="text-danger"> Directeur say that is not valid </span>
			{% elseif form.etatDirecteurPd.vars.value == 0 %}
				<span class="text-warning"> in process </span>
			{% endif %}
		</div>
		{% endif%}

		{% if is_granted('ROLE_ETABLISSEMENT') %}
			<div class="col col-md-6 mb-5">
				<label for="demande_etat" class="fx-text-dark h5 col-form-label-lg"> 
					{{ form_label(form.etatDirecteurGn, 'Demande Etat :') }} 
				</label>
				{{ form_widget(form.etatDirecteurGn, {'attr': {'class': 'form-control form-control-lg'}}) }}
				{% if form.etatDirecteurGn.vars.value == 1 %}
					<span class="text-success"> Etablissment say that is valid </span>
				{% elseif form.etatDirecteurGn.vars.value == 0 %}
					<span class="text-danger"> Etablissment say that is not valid </span>
				{% elseif form.etatDirecteurGn.vars.value == 0 %}
					<span class="text-warning"> in process </span>
				{% endif %}
			</div>
		{% endif%}

		<div class="col col-md-6 mb-5">
			<label for="demande_diplome" class="fx-text-dark h5 col-form-label-lg"> 
				{{ form_label(form.diplome, 'diplome :') }} 
			</label>
			{{ form_widget(form.diplome, {'attr': {'class': 'from-control form-control-lg'}}) }}
		</div>
		
		<object type="application/pdf" width="100%" height="100%" class="fx-height-500">
			<param name="src" value="{{ asset('uploads/diplomeLaureat/'~ key.data.fichier) }}" />
			<p>It appears your Web browser is not configured to display PDF files.
				No worries, just <a href="{{ asset('uploads/diplomeLaureat/'~ key.data.fichier) }}">click here to download the PDF file.</a>
			</p>
		</object>
	</div>
	<div class="text-center mt-4">
		<button class="btn btn-widest btn-tall btn-primary">
			<i data-feather="save" class="pr-1"></i>
			<span class="pr-2">{{ button_label|default('valider demande') }}</span>
		</button>
	</div>
{{ form_end(form) }}
