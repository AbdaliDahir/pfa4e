{% extends 'security-base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <!-- Hero Section -->
    <div class="position-relative">
        <!-- half bachground -->
        <div class="col-md-6 position-absolute fx-top-0 fx-left-0 full-height" style="background-color: #f3f5f8;"></div>
        <div class="fx-h-100">
            <div class="container">
                <div class="row align-items-center justify-content-lg-between">
                    <!-- Left Content -->
                    <div class="col-md-5 full-height">
                        <!-- Content -->
                        <div class="position-relative fx-z-index-2 fx-h-100 d-flex align-items-center">
                            <div class="text-left text-security">
                                <h1 class="h1 fx-text-boldest text-primary"> Diploma </h1>
                                <div class="fx-divider fx-divider-horizontal fx-divider-2x"></div>
                                <p class="display-4 fx-text-bolder my-5"> Creativity & quality is our distination</p>
                                <div class="quote-content">
                                    <div class="quote2-module__content--author mb-4">
                                        <img class="fx-avatar rounded-circle fx-avatar-bordered shadow-lg d-inline-block fx-avatar-lg" src="/build/envato-green.png" alt="Image Description">
                                        <span class="pl-4 font-weight-bold">Soya Diallo,&nbsp;Chef Project</span>
                                    </div>
                                    <p class="h6 font-weight-normal fx-text-lh-md">
                                        "Since the beginning our main goal was to help entrepreneurs&nbsp;build new software solution that matters. Building and shipping products that are helpful for people, making world a better place, for everyone, including ourselves."
                                    </p>
                                </div>
                            </div>
                        </div>
                        <!-- ./End Content -->
                    </div>
                    <!-- ./End Left Content -->
                
                    <!-- Right Content -->
                    <div class="col-md-5 align-self-center space-2 space-md-3 space-lg-0 full-height d-flex align-items-center">
                        <div class="fx-w-100">
                            <form method="post" class="security-form">
                                {% if error %}
                                    <div class="alert alert-danger font-weight-bold">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-3">
                                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                {% endif %}

                                <div class="mb-4">
                                    <input type="email" value="{{ last_username }}" placeholder="email address" name="email" id="inputEmail" class="form-control form-control-lg" required autofocus>
                                </div>
                                <div class="mb-4">
                                    <input type="password" name="password" placeholder="password" id="inputPassword" class="form-control form-control-lg" required>
                                </div>

                                <input type="hidden" name="_csrf_token"
                                    value="{{ csrf_token('authenticate') }}"
                                >

                                {#
                                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                    See https://symfony.com/doc/current/security/remember_me.html

                                    <div class="checkbox mb-3">
                                        <label>
                                            <input type="checkbox" name="_remember_me"> Remember me
                                        </label>
                                    </div>
                                #}

                                <button class="btn btn-lg btn-brand btn-block mt-4 rounded-0 font-weight-bold" type="submit">
                                    Sign in
                                </button>
                            </form>
                            <p class="text-right my-4 h6 font-weight-normal fx-text-lh-md text-lowercase">
                                <span class="align-middle">Mot de passe oubli√© ?</span>
                                <a href={{ path('app_forgot_password_request')}} class="fx-text-brand text-underline"> reset password </a>
                            </p>
                        </div>
                    </div>
                    <!-- ./End Right Content -->
                </div>
            </div>
        </div>
    </div>
    <!-- ./End Hero Section --> 
{% endblock %}
