<form class="d-inline-block" method="post" action="{{ path('etablissement_delete', {'id': etablissement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
  <input type="hidden" name="_method" value="DELETE">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ etablissement.id) }}">
  <button class="btn btn-danger">
    <i data-feather="trash" class="pr-2"></i>
    <span class="align-middle">Delete</span>
  </button>
</form>
